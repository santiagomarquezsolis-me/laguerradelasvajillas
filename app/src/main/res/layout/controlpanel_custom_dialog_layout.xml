<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="fill_parent"    android:layout_height="fill_parent"    android:background="@drawable/background02"    android:gravity="top" >    <LinearLayout        android:id="@+id/linearLayout2"        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:layout_alignParentLeft="true"        android:layout_alignParentTop="true"        android:layout_marginTop="5dp" >        <ImageView            android:id="@+id/actor_ImageView"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginBottom="5dp"            android:src="@drawable/actor_c2p2" />    </LinearLayout>    <LinearLayout        android:id="@+id/linearLayout1"        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:layout_alignParentLeft="true"        android:layout_below="@+id/linearLayout2"        android:orientation="vertical" >        <TextView            android:id="@+id/actorTitle_TextView"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="bottom"            android:layout_marginLeft="10dp"            android:text="C2P2 dice:"            android:textAppearance="?android:attr/textAppearanceMedium"            android:textColor="#fcdf2b" />        <TextView            android:id="@+id/actor_TextView"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="bottom"            android:layout_marginLeft="10dp"            android:text="¡Amo Luque! Seleccione que desea hacer. Introduzca el código y pulse el botón &quot;Enter&quot;"            android:textAppearance="?android:attr/textAppearanceMedium"            android:textColor="#ffffff" />    </LinearLayout>     <ScrollView         android:id="@+id/scrollView1"         android:layout_width="fill_parent"         android:layout_height="wrap_content"         android:layout_alignParentBottom="true"         android:layout_alignParentLeft="true"         android:background="@drawable/frame" >            <LinearLayout        android:id="@+id/linearLayout3"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_below="@+id/linearLayout1"        android:layout_centerHorizontal="true"        android:layout_marginTop="15dp"        android:orientation="vertical" >        <TextView            android:id="@+id/display_TextView"            android:layout_width="156dp"            android:layout_height="wrap_content"            android:layout_marginLeft="20dp"            android:layout_marginTop="20dp"            android:background="@drawable/display"            android:text=" "            android:textAppearance="?android:attr/textAppearanceLarge"            android:textColor="#ffffff"            android:textStyle="bold" />        <LinearLayout            android:layout_width="fill_parent"            android:layout_height="0dp"            android:layout_marginLeft="20dp"            android:layout_weight="1"            android:orientation="vertical" >            <CheckBox                android:id="@+id/autoDestruction_CheckBox"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="Activar Autodestrucción"                android:textColor="#fcdf2b"                android:textStyle="bold" />            <CheckBox                android:id="@+id/tractorRay_CheckBox"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="Desactivar Rayo Tractor"                android:textColor="#fcdf2b"                android:textStyle="bold" />        </LinearLayout>        <LinearLayout            android:layout_width="fill_parent"            android:layout_height="0dp"            android:layout_marginLeft="20dp"            android:layout_weight="0.50" >            <Button                android:id="@+id/Zero_Button"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:background="@drawable/boton"                android:text="0"                android:textColor="#ffffff"                android:textStyle="bold" />            <Button                android:id="@+id/One_Button"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:background="@drawable/boton"                android:text="1"                android:textColor="#ffffff"                android:textStyle="bold" />            <Button                android:id="@+id/Two_Button"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:background="@drawable/boton"                android:text="2"                android:textColor="#ffffff"                android:textStyle="bold" />            <Button                android:id="@+id/Three_Button"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:background="@drawable/boton"                android:text="3"                android:textColor="#ffffff"                android:textStyle="bold" />        </LinearLayout>        <LinearLayout            android:layout_width="469dp"            android:layout_height="0dp"            android:layout_marginLeft="20dp"            android:layout_marginTop="5dp"            android:layout_weight="0.73" >            <Button                android:id="@+id/Four_Button"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:background="@drawable/boton"                android:text="4"                android:textColor="#ffffff"                android:textStyle="bold" />            <Button                android:id="@+id/Five_Button"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:background="@drawable/boton"                android:text="5"                android:textColor="#ffffff"                android:textStyle="bold" />            <Button                android:id="@+id/Six_Button"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:background="@drawable/boton"                android:text="6"                android:textColor="#ffffff"                android:textStyle="bold" />            <Button                android:id="@+id/Seven_Button"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:background="@drawable/boton"                android:text="7"                android:textColor="#ffffff"                android:textStyle="bold" />        </LinearLayout>        <LinearLayout            android:layout_width="fill_parent"            android:layout_height="0dp"            android:layout_marginBottom="20dp"            android:layout_marginLeft="20dp"            android:layout_marginTop="5dp"            android:layout_weight="1" >            <Button                android:id="@+id/Eight_Button"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:background="@drawable/boton"                android:text="8"                android:textColor="#ffffff"                android:textStyle="bold" />            <Button                android:id="@+id/Nine_Button"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:background="@drawable/boton"                android:text="9"                android:textColor="#ffffff"                android:textStyle="bold" />            <Button                android:id="@+id/Enter_Button"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:background="@drawable/boton"                android:text=" Enter "                android:textColor="#ffffff"                android:textStyle="bold" />            <Button                android:id="@+id/Clear_Button"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:background="@drawable/boton"                android:text="Limpiar"                android:textColor="#ffffff"                android:textStyle="bold" />        </LinearLayout>    </LinearLayout>     </ScrollView></RelativeLayout>